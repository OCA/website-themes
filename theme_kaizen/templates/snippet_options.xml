<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="snippet_options" inherit_id="website.snippet_options">
        <xpath expr=".">
            <div
                data-drop-near=".snippet_kaizen_contributors .swiper-slide"
                data-selector=".snippet_kaizen_contributors .swiper-slide"
            />
            <div
                data-js="collapse"
                data-selector='.snippet_kaizen_faq, .snippet_kaizen_faq .questions li'
            />
            <div
                data-drop-near=".snippet_kaizen_faq .questions li"
                data-selector=".snippet_kaizen_faq .questions li"
            />
            <div
                data-selector=".breadcrumbs > .container > a, .breadcrumbs > .container > img"
                data-drop-near=".breadcrumbs > .container > a, .breadcrumbs > .container > img"
            />
            <div
                data-selector=".snippet_kaizen_links li"
                data-drop-near=".snippet_kaizen_links li"
            />
            <div
                data-selector=".snippet_kaizen_discussions li"
                data-drop-near=".snippet_kaizen_discussions li"
            />
            <div
                data-selector=".snippet_kaizen_content_listing > div"
                data-drop-near=".snippet_kaizen_content_listing > div"
            />
            <div
                data-selector=".snippet_kaizen_links, .snippet_kaizen_discussions, .snippet_kaizen_content_listing"
                data-drop-in=".kaizen_snippet_sidebar .content"
            />
            <!-- Mega menu snippets -->
            <div
                data-selector=".o_mega_menu .header-banner"
                data-drop-in=".o_mega_menu .container"
            />
            <div
                data-selector=".o_mega_menu .header-links-group"
                data-drop-near=".o_mega_menu .header-links-group"
            />
            <div
                data-selector=".o_mega_menu .header-links-group > div"
                data-drop-near=".o_mega_menu .header-links-group > div"
            />
            <div
                data-selector="#sidebarNavigation > li"
                data-drop-near="#sidebarNavigation > li"
            />
        </xpath>
    </template>
</odoo>
